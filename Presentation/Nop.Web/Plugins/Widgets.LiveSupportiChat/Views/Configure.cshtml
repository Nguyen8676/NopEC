@model Nop.Plugin.Widgets.LiveSupportiChat.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

@using Nop.Web.Framework;
    <form asp-controller="WidgetsLiveSupportiChat" asp-action="Configure" method="post">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h2 style="margin:20px 0px;display:block;">Add live chat to your nopCommerce website by following the steps below:</h2>
                            <h3>Step 1</h3>
                            <p>Get your LiveSupporti code snippet from <a href="https://livesupporti.com/home" target="_blank">here</a>&nbsp;(Don't have a LiveSupporti account? <a href="https://livesupporti.com/signup" target="_blank">Sign up now</a>).</p>
                            <h3>Step 2</h3>
                            <p>Copy the code snippet and paste it into the textbox below.</p>
                            <h3>Step 3</h3>
                            <p>Click Save.</p>
                            <br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-1">
                            <nop-override-store-checkbox asp-for="WidgetCodeSnippet_OverrideForStore" asp-input="WidgetCodeSnippet" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                            <nop-label asp-for="WidgetCodeSnippet" />
                        </div>
                        <div class="col-md-5">
                            <nop-textarea asp-for="WidgetCodeSnippet" />
                            <span asp-validation-for="WidgetCodeSnippet"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-9 col-md-offset-3">
                            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
